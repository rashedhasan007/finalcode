<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ordercorner"
        android:layout_height="470dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:id="@+id/idTVtext"
                android:text="bsn"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="25dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="150dp">
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="100dp"
                card_view:cardCornerRadius="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="100dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/idIVimage"
                    android:src="@drawable/shirt"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="200dp"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_height="100dp">
                <LinearLayout
                    android:layout_width="200dp"
                    android:orientation="horizontal"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:textSize="20dp"
                        android:text="Total price"
                        android:textColor="@color/Black"
                        android:textStyle="bold"
                        android:fontFamily="@font/latobold"/>
                    <TextView
                        android:layout_width="100dp"
                        android:id="@+id/price"
                        android:layout_height="40dp"
                        android:textSize="20dp"
                        android:text="0"
                        android:fontFamily="@font/latobold"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="200dp"
                    android:orientation="horizontal"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:textSize="20dp"
                        android:text="Total Stock"
                        android:textColor="@color/Black"
                        android:textStyle="bold"
                        android:fontFamily="@font/latobold"/>
                    <TextView
                        android:layout_width="100dp"
                        android:id="@+id/order"
                        android:layout_height="40dp"
                        android:textSize="20dp"
                        android:text="0"
                        android:fontFamily="@font/latobold"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_height="100dp">
            <Switch
                android:layout_width="match_parent"
                android:text="Out of stock"
                android:thumbTint="#FFF648"
                android:trackTint="#DFDFDF"
                android:layout_height="match_parent" />


        </LinearLayout>
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardCornerRadius="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_height="50dp">

                <!-- Main Content View -->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="4"
                    android:layout_marginTop="7dp"
                    android:gravity="left"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/shop1"
                    />
                <TextView
                    android:layout_width="250dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/latobold"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:text="www.honeypani.com"
                    android:layout_height="50dp" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:id="@+id/copy"
                    android:gravity="right"
                    android:layout_weight="4"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/copy"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_height="80dp">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/editproduct"
                android:layout_weight="1"
                android:textColor="@color/Black"
                android:background="@drawable/orderbuttonround"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginRight="15dp"
                android:text="Delete"
                android:fontFamily="@font/latobold"
                android:layout_height="40dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/Shareproduct"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/Black"
                android:textSize="20dp"
                android:text="Share"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:background="@drawable/orderbuttonround"
                android:fontFamily="@font/latobold"
                android:layout_height="40dp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>