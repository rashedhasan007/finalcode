<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".createshop">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/createshopprogress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:maxHeight="15dip"
            android:minHeight="15dip"
            android:progress="10"
            android:progressDrawable="@drawable/progressbar" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/latobold"
                    android:textColor="@color/Black"
                    android:text="website Name"
                    android:layout_height="20dp" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/messageTextInputLayout2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/companyname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:hint="website name" />


                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/latobold"
                    android:textColor="@color/Black"
                    android:text="Cover photo 300X400 "
                    android:layout_height="20dp" />
                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:src="@drawable/photo"
                    android:id="@+id/coverphoto"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal"
                    app:riv_corner_radius="10dip"
                    app:riv_border_width="2dip"
                    app:riv_border_color="#FFDB29"
                    app:riv_mutate_background="true"
                    android:layout_height="150dp"
                    android:layout_width="250dp" />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:text="upload"
                    android:background="@drawable/addproductbutton"
                    android:id="@+id/nextcreate1"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/latobold"
                    android:textColor="@color/Black"
                    android:text="Logo"
                    android:layout_height="20dp" />
                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:src="@drawable/photo"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/logo"
                    android:scaleType="centerInside"
                    app:riv_corner_radius="10dip"
                    app:riv_border_width="2dip"
                    app:riv_border_color="#FFDB29"
                    app:riv_mutate_background="true"
                    app:riv_tile_mode="repeat"
                    android:layout_height="150dp"
                    android:layout_width="150dp" />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:text="upload"
                    android:background="@drawable/addproductbutton"
                    android:id="@+id/nextcreate2"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/latobold"
                    android:textColor="@color/Black"
                    android:text="About Us"
                    android:layout_height="20dp" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/mes"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:hint="website name" />


                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/latobold"
                    android:textColor="@color/Black"
                    android:text="Contact Number"
                    android:layout_height="20dp" />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/contactnumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:hint="website name" />


                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/latobold"
                    android:textColor="@color/Black"
                    android:text="Address"
                    android:layout_height="20dp" />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:hint="website name" />


                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="9"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Create shop"
                android:background="@drawable/addproductbutton"
                android:id="@+id/nextcreate"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>